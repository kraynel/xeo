    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "files": [],
  "include": [],
  "exclude": ["node_modules", "types"],
  "references": [
    {
      "path": "./tsconfig.lib.json"
    },
    {
      "path": "./tsconfig.spec.json"
    },
    {
      "path": "./.storybook/tsconfig.json"
    }
  ]
}
